{
  "name": "undoh",
  "version": "1.0.2",
  "description": "This Typescript module provides an undo class that can be used to implement a simple undo/redo mechanism in programs.",
  "main": "lib/undo.js",
  "types": "lib/undo.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm test",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/giffeler/undoh.git"
  },
  "keywords": [
    "typescript",
    "undo-redo",
    "undomanager"
  ],
  "author": "Denis Giffeler",
  "license": "GPL",
  "files": [
    "lib/**/*"
  ],
  "bugs": {
    "url": "https://github.com/giffeler/undoh/issues"
  },
  "homepage": "https://github.com/giffeler/undoh/blob/main/README.md",
  "devDependencies": {
    "@types/jest": "^29.1.1",
    "eslint": "^8.26.0",
    "jest": "^29.1.2",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4"
  }
}
